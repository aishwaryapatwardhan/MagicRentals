<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/fav_iconImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/fav_heartsImage"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:layout_margin="10dp"
                android:layout_gravity="left"
                style="@style/Text1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="streetValue"
                    android:id="@+id/fav_streetValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cityValue"
                    android:id="@+id/fav_cityValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stateValue"
                    android:id="@+id/fav_stateValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZipCode:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zipcodeValue"
                    android:id="@+id/fav_zipcodeValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Type:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="proptypeValue"
                    android:id="@+id/fav_proptypeValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# of Rooms:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="numRoomsValue"
                    android:id="@+id/fav_numRoomsValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# of baths:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="numBathsValue"
                    android:id="@+id/fav_numBathsValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sq Feet:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sqFeetValue"
                    android:id="@+id/fav_sqFeetValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly rent:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="montlyRentValue"
                    android:id="@+id/fav_monthlyRentValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descriptionValue"
                    android:id="@+id/fav_descriptionValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="othersValue"
                    android:id="@+id/fav_othersValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact number:"
                    android:id="@+id/fav_textView14"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contactNumberValue"
                    android:id="@+id/fav_contactNumberValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Email:"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contactEmailValue"
                    android:id="@+id/fav_contactEmailValue"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    style="@style/Resp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
