<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="2dp">


    <ImageView
            android:id="@+id/house_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_imagehouse"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statuscurr"
        android:text="@string/status"
        android:layout_below="@+id/house_image"
        android:layout_marginLeft="28dp"
        android:textSize="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nick_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/house_image"
        android:layout_alignTop="@+id/house_image"
        android:text="Nick Name"
        android:textSize="17dp"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_street"
        android:layout_toRightOf="@+id/house_image"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/nick_name"
        android:text="@string/street"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_line2"
        android:layout_toRightOf="@+id/house_image"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/house_street"
        android:text="Address Line 2"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_count"
        android:layout_toRightOf="@+id/house_image"
        android:layout_below="@+id/address_line2"
        android:layout_marginTop="1dp"
        android:text="@string/viewCount"
        android:textSize="15dp"/>

 </RelativeLayout>